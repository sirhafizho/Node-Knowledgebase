extends layout
        
block content 
    h1= article.title
    h5 written by #{author}
    br
    p= article.body
    hr
    if user
        if user.id == article.author
            a.btn.btn-dark(href='/articles/edit/' + article._id) Edit
            a.btn.btn-danger.delete-article(href="", data-id=article._id, style="margin-left: 10px;") Delete