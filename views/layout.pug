doctype html 
html 
    head
        title Knowledgebase
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/style.css')
    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            .container
                a.navbar-brand(href='/') Knowledgebase
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarNav.collapse.navbar-collapse
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(aria-current='page' href='/') Home
                        if user
                            li.nav-item
                                a.nav-link(href='/articles/add') Add Articles
                    ul.nav.navbar-nav.ms-auto
                        if user
                            li 
                                a.nav-link(href='/users/logout') Logout
                        else
                            li 
                                a.nav-link(href='/users/register') Register
                            li 
                                a.nav-link(href='/users/login') Login
        br
        
        .container 
            != messages('message', locals)
            if errors 
                each error, i in errors 
                    div(class="alert alert-danger") #{error.msg}
            block content 
            br
            hr
            footer 
                p Copyright &copy; of Hafiz 2021
        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')